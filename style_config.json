  "spelling": [
    {
      "use": "adaptor signatures",
      "dontUse": ["adapter signatures"],
      "notes": ""
    },
    {
      "use": "discreet log contracts",
      "dontUse": ["discrete log contracts"],
      "notes": "Remembering to spell this correctly more often than one time in ten is known as the discrete log problem"
    },
    {
      "use": "k-of-n multisig and n-of-n multisignature",
      "dontUse": ["m-of-n multisig", "any_other_letter-of-any_other_letter multisig"],
      "notes": "When spoken, 'm-of-n' can easily be confused with 'n-of-n'."
    },
    {
      "use": "light client",
      "dontUse": ["lite client"],
      "notes": ""
    },
    {
      "use": "merklized",
      "dontUse": ["merkelized", "merkleized"],
      "notes": ""
    }
  ],
  "preferredTerms": [
    {
      "use": "coinbase transaction",
      "dontUse": ["generation transaction"],
      "notes": ""
    },
    {
      "use": "hardware signers or hardware signing devices",
      "dontUse": ["hardware wallets"],
      "notes": "The wallet is the software/logical component that tracks UTXOs, constructs transactions, etc. Devices sold as \"hardware wallets\" are dedicated key storage and signing devices."
    },
    {
      "use": "forwarding",
      "dontUse": ["routing"],
      "notes": "For relaying LN payments from one node to the next"
    },
    {
      "use": "lowercase words for P2P message types e.g. inv, getdata, tx",
      "dontUse": ["Uppercase words e.g. INV, GETDATA, TX"],
      "notes": "The command type contained in the P2P message is lowercase ascii"
    },
    {
      "use": "Merklized Alternative Script Trees",
      "dontUse": ["Merklized Abstract Syntax Trees"],
      "notes": "https://bitcoinops.org/en/newsletters/2018/12/28/#fn:fn-mast"
    },
    {
      "use": "pathfinding",
      "dontUse": ["routing"],
      "notes": "For finding LN routes; routing is ok in specialized contexts (e.g. \"source-routed\" or trampoline routing)"
    },
    {
      "use": "payjoin",
      "dontUse": ["P2EP", "bustapay", "PayJoin"],
      "notes": ""
    },
    {
      "use": "receiver",
      "dontUse": ["recipient"],
      "notes": ""
    },
    {
      "use": "spender",
      "dontUse": ["sender"],
      "notes": "\"sender\" may ambiguously refer to the sender of data"
    },
    {
      "use": "uneconomical output",
      "dontUse": ["dust"],
      "notes": "The dust limit is the minimum value an output must contain in order for Bitcoin Core to relay a transaction containing that output. What's economical or not changes as minimum feerates change, but the dust limit doesn't change often."
    }
  ]
}
